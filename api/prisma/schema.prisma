generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id  String  @id @default(uuid())
  title String
  content String
  user  User  @relation(fields: [owner], references: [id])
  owner String  @unique
}

model User {
  id  String  @id @default(uuid())
  lastname  String
  firstname String
  email String @unique
  password String
  posts Post[]
}
