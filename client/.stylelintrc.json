{
  "extends": [
    "stylelint-config-html/html",
    "stylelint-config-html/vue",
    "stylelint-config-standard"
  ],
  "rules": {
    "alpha-value-notation": null,
    "at-rule-empty-line-before": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "tailwind",
          "layer",
          "apply",
          "responsive",
          "variants",
          "screen"
        ]
      }
    ]
  }
}
